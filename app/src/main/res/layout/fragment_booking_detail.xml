<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Activities.Main.Fragment.Booking.BookingDetailFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back_arrow"
            android:layout_margin="8dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Booking"
            android:textSize="32sp"
            android:textStyle="bold"
            android:gravity="center_horizontal"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="8dp"
                    android:layout_marginVertical="8dp"
                    android:text="General"
                    android:textSize="26sp"
                    android:textStyle="bold" />
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginHorizontal="8dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_marginTop="20dp"
                                android:layout_marginRight="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="marquee"
                                android:marqueeRepeatLimit="marquee_forever"
                                android:padding="8dp"
                                android:scrollHorizontally="true"
                                android:singleLine="true"
                                android:text="Pick Up: "
                                android:textSize="20sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_marginTop="20dp"
                                android:layout_marginRight="10dp"
                                android:id="@+id/pick_up"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:ellipsize="marquee"
                                android:marqueeRepeatLimit="marquee_forever"
                                android:padding="8dp"
                                android:scrollHorizontally="true"
                                android:singleLine="true"
                                android:text="Pick Up"
                                android:textSize="20sp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">
                            <TextView

                                android:layout_marginRight="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="marquee"
                                android:marqueeRepeatLimit="marquee_forever"
                                android:padding="8dp"
                                android:scrollHorizontally="true"
                                android:singleLine="true"
                                android:text="Destination: "
                                android:textSize="20sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_marginRight="10dp"
                                android:id="@+id/destination"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:ellipsize="marquee"
                                android:marqueeRepeatLimit="marquee_forever"
                                android:padding="8dp"
                                android:scrollHorizontally="true"
                                android:singleLine="true"
                                android:text="Destination"
                                android:textSize="20sp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">
                            <TextView

                                android:layout_marginRight="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="marquee"
                                android:marqueeRepeatLimit="marquee_forever"
                                android:padding="8dp"
                                android:scrollHorizontally="true"
                                android:singleLine="true"
                                android:text="Booking Time: "
                                android:textSize="20sp"
                                android:textStyle="bold" />

                            <TextView

                                android:layout_marginRight="10dp"
                                android:id="@+id/booking_time"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:ellipsize="marquee"
                                android:marqueeRepeatLimit="marquee_forever"
                                android:padding="8dp"
                                android:scrollHorizontally="true"
                                android:singleLine="true"
                                android:text="Booking Time"
                                android:textSize="20sp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_marginRight="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="marquee"
                                android:marqueeRepeatLimit="marquee_forever"
                                android:padding="8dp"
                                android:scrollHorizontally="true"
                                android:singleLine="true"
                                android:text="Status: "
                                android:textSize="20sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_marginRight="10dp"
                                android:id="@+id/status"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:ellipsize="marquee"
                                android:marqueeRepeatLimit="marquee_forever"
                                android:padding="8dp"
                                android:scrollHorizontally="true"
                                android:singleLine="true"
                                android:text="Pending"
                                android:textSize="20sp"/>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginHorizontal="8dp"
                        android:layout_marginTop="24dp"
                        android:layout_marginBottom="8dp"
                        android:text="Vehicle"
                        android:textSize="26sp"
                        android:textStyle="bold" />
                    <ImageView
                        android:id="@+id/vehicle_expand"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_arrow_down"
                        android:translationY="10dp"
                        android:layout_marginRight="8dp"/>
                </LinearLayout>
                <androidx.cardview.widget.CardView
                    android:id="@+id/vehicle_card_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginHorizontal="8dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_marginTop="20dp"
                                android:layout_marginRight="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="marquee"
                                android:marqueeRepeatLimit="marquee_forever"
                                android:padding="8dp"
                                android:scrollHorizontally="true"
                                android:singleLine="true"
                                android:text="Brand: "
                                android:textSize="20sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_marginTop="20dp"
                                android:layout_marginRight="10dp"
                                android:id="@+id/brand"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:ellipsize="marquee"
                                android:marqueeRepeatLimit="marquee_forever"
                                android:padding="8dp"
                                android:scrollHorizontally="true"
                                android:singleLine="true"
                                android:text="Brand"
                                android:textSize="20sp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">
                            <TextView

                                android:layout_marginRight="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="marquee"
                                android:marqueeRepeatLimit="marquee_forever"
                                android:padding="8dp"
                                android:scrollHorizontally="true"
                                android:singleLine="true"
                                android:text="Name "
                                android:textSize="20sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_marginRight="10dp"
                                android:id="@+id/name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:ellipsize="marquee"
                                android:marqueeRepeatLimit="marquee_forever"
                                android:padding="8dp"
                                android:scrollHorizontally="true"
                                android:singleLine="true"
                                android:text="Name"
                                android:textSize="20sp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">
                            <TextView

                                android:layout_marginRight="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="marquee"
                                android:marqueeRepeatLimit="marquee_forever"
                                android:padding="8dp"
                                android:scrollHorizontally="true"
                                android:singleLine="true"
                                android:text="Color: "
                                android:textSize="20sp"
                                android:textStyle="bold" />

                            <TextView

                                android:layout_marginRight="10dp"
                                android:id="@+id/color"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:ellipsize="marquee"
                                android:marqueeRepeatLimit="marquee_forever"
                                android:padding="8dp"
                                android:scrollHorizontally="true"
                                android:singleLine="true"
                                android:text="Color"
                                android:textSize="20sp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_marginRight="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="marquee"
                                android:marqueeRepeatLimit="marquee_forever"
                                android:padding="8dp"
                                android:scrollHorizontally="true"
                                android:singleLine="true"
                                android:text="Seat: "
                                android:textSize="20sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_marginRight="10dp"
                                android:id="@+id/seat"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:ellipsize="marquee"
                                android:marqueeRepeatLimit="marquee_forever"
                                android:padding="8dp"
                                android:scrollHorizontally="true"
                                android:singleLine="true"
                                android:text="Seat"
                                android:textSize="20sp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_marginRight="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="marquee"
                                android:marqueeRepeatLimit="marquee_forever"
                                android:padding="8dp"
                                android:scrollHorizontally="true"
                                android:singleLine="true"
                                android:text="Plate: "
                                android:textSize="20sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_marginRight="10dp"
                                android:id="@+id/plate"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:ellipsize="marquee"
                                android:marqueeRepeatLimit="marquee_forever"
                                android:padding="8dp"
                                android:scrollHorizontally="true"
                                android:singleLine="true"
                                android:text="Plate"
                                android:textSize="20sp"/>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginHorizontal="8dp"
                        android:layout_marginTop="24dp"
                        android:layout_marginBottom="8dp"
                        android:text="Payment"
                        android:textSize="26sp"
                        android:textStyle="bold" />
                    <ImageView
                        android:id="@+id/payment_expand"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_arrow_down"
                        android:translationY="10dp"
                        android:layout_marginRight="8dp"/>
                </LinearLayout>
                <androidx.cardview.widget.CardView
                    android:id="@+id/payment_card_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginHorizontal="8dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_marginTop="20dp"
                                android:layout_marginRight="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="marquee"
                                android:marqueeRepeatLimit="marquee_forever"
                                android:padding="8dp"
                                android:scrollHorizontally="true"
                                android:singleLine="true"
                                android:text="Amount: "
                                android:textSize="20sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_marginTop="20dp"
                                android:layout_marginRight="10dp"
                                android:id="@+id/amount"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:ellipsize="marquee"
                                android:marqueeRepeatLimit="marquee_forever"
                                android:padding="8dp"
                                android:scrollHorizontally="true"
                                android:singleLine="true"
                                android:text="amount"
                                android:textSize="20sp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">
                            <TextView

                                android:layout_marginRight="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="marquee"
                                android:marqueeRepeatLimit="marquee_forever"
                                android:padding="8dp"
                                android:scrollHorizontally="true"
                                android:singleLine="true"
                                android:text="Method: "
                                android:textSize="20sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_marginRight="10dp"
                                android:id="@+id/method"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:ellipsize="marquee"
                                android:marqueeRepeatLimit="marquee_forever"
                                android:padding="8dp"
                                android:scrollHorizontally="true"
                                android:singleLine="true"
                                android:text="Method"
                                android:textSize="20sp"/>
                        </LinearLayout>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginHorizontal="8dp"
                        android:layout_marginTop="24dp"
                        android:layout_marginBottom="8dp"
                        android:text="User"
                        android:textSize="26sp"
                        android:textStyle="bold" />
                    <ImageView
                        android:id="@+id/user_expand"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_arrow_down"
                        android:translationY="10dp"
                        android:layout_marginRight="8dp"/>
                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:id="@+id/driver_card_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="8dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:orientation="horizontal">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/avatar"
                                android:layout_width="120dp"
                                android:layout_height="120dp"
                                android:src="@drawable/ic_avatar" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dp"
                                android:layout_marginRight="10dp"
                                android:ellipsize="marquee"
                                android:marqueeRepeatLimit="marquee_forever"
                                android:padding="8dp"
                                android:scrollHorizontally="true"
                                android:singleLine="true"
                                android:text="Name: "
                                android:textSize="20sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/driver_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dp"
                                android:layout_marginRight="10dp"
                                android:ellipsize="marquee"
                                android:marqueeRepeatLimit="marquee_forever"
                                android:padding="8dp"
                                android:scrollHorizontally="true"
                                android:singleLine="true"
                                android:text="Name"
                                android:textSize="20sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="10dp"
                                android:ellipsize="marquee"
                                android:marqueeRepeatLimit="marquee_forever"
                                android:padding="8dp"
                                android:scrollHorizontally="true"
                                android:singleLine="true"
                                android:text="Gender: "
                                android:textSize="20sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/gender"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="10dp"
                                android:ellipsize="marquee"
                                android:marqueeRepeatLimit="marquee_forever"
                                android:padding="8dp"
                                android:scrollHorizontally="true"
                                android:singleLine="true"
                                android:text="Gender"
                                android:textSize="20sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="10dp"
                                android:ellipsize="marquee"
                                android:marqueeRepeatLimit="marquee_forever"
                                android:padding="8dp"
                                android:scrollHorizontally="true"
                                android:singleLine="true"
                                android:text="Phone Number: "
                                android:textSize="20sp"
                                android:textStyle="bold" />

                            <TextView

                                android:id="@+id/phone_number"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="10dp"
                                android:ellipsize="marquee"
                                android:marqueeRepeatLimit="marquee_forever"
                                android:padding="8dp"
                                android:scrollHorizontally="true"
                                android:singleLine="true"
                                android:text="Phone Number"
                                android:textSize="20sp" />
                        </LinearLayout>

                        <Button
                            android:id="@+id/chat_button"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Chat"
                            android:layout_marginHorizontal="8dp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginHorizontal="8dp"
                        android:layout_marginTop="24dp"
                        android:layout_marginBottom="8dp"
                        android:text="Resource"
                        android:textSize="26sp"
                        android:textStyle="bold" />
                    <ImageView
                        android:id="@+id/resource_expand"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_arrow_down"
                        android:translationY="10dp"
                        android:layout_marginRight="8dp"/>
                </LinearLayout>
                <androidx.cardview.widget.CardView
                    android:id="@+id/resource_card_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginHorizontal="8dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_marginTop="20dp"
                                android:layout_marginRight="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="marquee"
                                android:marqueeRepeatLimit="marquee_forever"
                                android:padding="8dp"
                                android:scrollHorizontally="true"
                                android:singleLine="true"
                                android:text="Real Pick Up Time: "
                                android:textSize="20sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_marginTop="20dp"
                                android:layout_marginRight="10dp"
                                android:id="@+id/real_pick_up_time"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:ellipsize="marquee"
                                android:marqueeRepeatLimit="marquee_forever"
                                android:padding="8dp"
                                android:scrollHorizontally="true"
                                android:singleLine="true"
                                android:text="Time"
                                android:textSize="20sp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <TextView

                                android:layout_marginRight="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="marquee"
                                android:marqueeRepeatLimit="marquee_forever"
                                android:padding="8dp"
                                android:scrollHorizontally="true"
                                android:singleLine="true"
                                android:text="Pick Up Image:"
                                android:textSize="20sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardElevation="4dp"
                            android:layout_marginHorizontal="16dp"
                            android:layout_marginBottom="45dp">
                            <ImageView
                                android:id="@+id/image"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_image"/>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <Button
                    android:id="@+id/pick_up_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pick_up"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginHorizontal="8dp"/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</FrameLayout>