<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.DRIVERABER" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary Brand Color -->
        <item name="colorPrimary">@color/pale_blue</item>
        <item name="colorPrimaryVariant">@color/purple</item>
        <!-- Secondary Brand Color -->
        <item name="android:colorBackground">@color/white</item>
        <item name="colorOnSurface">@color/black</item>
        <!-- Status Bar Color -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textCursorDrawable">@color/black</item>

        <!--        Pop up menu style-->
        <item name="popupMenuStyle">@style/MyPopupMenu</item>
        <item name="popupMenuBackground">@drawable/rouned_background</item>



        <item name="itemStrokeWidth">20dp</item>
        <item name="itemPaddingBottom">100dp</item>

    </style>

    <style name="Theme.DRIVERABER" parent="Base.Theme.DRIVERABER" />

    <style name="Theme.DRIVERABER.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.DRIVERABER.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.DRIVERABER.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MyPopupMenu" parent="@style/Widget.AppCompat.PopupMenu">
        <item name="android:dropDownHorizontalOffset">20dp</item>
        <item name="android:dropDownVerticalOffset">20dp</item>
        <item name="popupMenuBackground">@drawable/rouned_background</item>
        <item name="itemTextColor">@color/pale_blue</item>
    </style>

    <style name="MyOutlinedTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">


        <item

            name="boxStrokeColor">@drawable/text_input_box_stroke_color</item>

    </style>

</resources>